<div class="col s12" id="header">
{% if header %}
<div>
    <table class="responsive-table highlight centered bordeblue-grey">
        <thead>
            <tr>
                <th>Image 1</th>
                <th>Titre</th>
                <th>sous-titre</th>
                <th>Image 2</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="admin-thumb-block">
                        <img src="{{ asset('img/' ~header.image1 ) }}" alt="Photo de l'Alaska" class="admin-thumb">
                    </div>
                </td>
                <td>
                    <div>
                        <p>{{ header.title }}</p>
                    </div>
                </td>
                <td>
                    <div>
                        <p>{{ header.subtitle }}</p>
                    </div>
                </td>
                <td>
                    <div class="admin-thumb-block">
                        <img src="{{ asset('img/' ~header.image2 ) }}" alt="Photo de l'Alaska" class="admin-thumb">
                    </div>
                </td>
                <td>
                    <a class="btn tooltipped waves-effect blue lighten-1" href="{{ path('admin_header_edit', { 'id': header.id }) }}" data-position="top" data-delay="30" data-tooltip="Editer">
                        <i class="material-icons">mode_edit</i>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
{% else %}
<div class="card-panel orange white-text">
    Aucune en-tête de trouvés.
</div>
{% endif %}
</div> <!-- Header -->
