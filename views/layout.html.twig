<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <!--Import Google Icon Font-->
      <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Materialize CSS -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
    <!-- personnal CSS -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/css/fa/css/font-awesome.min.css">

    <title>Billet simple pour l'Alaska - {% block title %} {% endblock title %} </title>
</head>

<body>
    {% if app.user and is_granted('ROLE_ADMIN') %}
    <!-- Dropdown Structure -->
    <ul id="dropdown1" class="dropdown-content">
        <li>
            <a href="{{ path('admin') }}">Administration</a>
        </li>
        <li>
             <a href="{{ path('logout') }}">Se déconnecter</a>
        </li>
    </ul>
    {% endif %}
    <nav>
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">Billet simple pour l'Alaska</a>
            <ul class="right hide-on-med-and-down" id="nav-mobile">
                <li>
                    <a class="{% if current_uri == '/' %}active{% endif %} " href="{{ path('home') }}"><i class="material-icons left">description</i> Accueil</a>
                </li>
                <li>
                    <a class="{% if current_uri == '/chapters' %}active{% endif %}" href="{{ path('chapters') }}"><i class="material-icons left">library_books</i> Chapitres</a>
                </li>
                <li>
                    <a class="{% if current_uri == '/about' %}active{% endif %}" href="{{ path('about') }}"><i class="material-icons left">info</i> A propos</a>
                </li>
                <li> <!-- Dropdown trigger -->
                    <a class="dropdown-button" href="#!" data-activates="dropdown1">
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                        Bonjour, {{ app.user.username }}<i class="material-icons right">arrow_drop_down</i>
                        {% endif %}
                    </a>
                </li>
            </ul>          
        </div>
    </nav>
    <div class="container">
        {% block content %} {% endblock content %}
    </div>
    <footer class="page-footer">
        <div class="footer-copyright">
            <div class="container">
                 <p>Copyright Jean Forteroche 2017</p>
            {% if app.user and is_granted('ROLE_ADMIN') %}
                <p>Vous êtes connecté à l'administration.</p>
            </div>
            
        </div>
        {% else %}
        <div class="footer-copyright">
            <div class="container">
                <a href="{{ path('login') }}"><i class="fa fa-user-o" aria-hidden="true"></i> Se connecter à l'administration</a>            {% endif %}
            </div>
        </div>
    </footer>

    <!-- Tiny MCE -->
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=rmn7wfydsgzro3alm5wnbd1e2czouq6aymkzocgwo9iqgtbh"></script>
    <script type="text/javascript">
        tinymce.init({
            selector:'#article_content',
            language: 'fr_FR',
            language_url : '/js/tinymce/js/langs/fr_FR.js',
            plugins: [
                'advlist autolink link image lists charmap print preview hr anchor pagebreak spellchecker',
                'searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking',
                'save table contextmenu directionality emoticons template paste textcolor'
            ],
            toolbar: [
                'insertfile undo redo | styleselect | bold italic underline strikethrough | emoticons | link image',
                'alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | forecolor backcolor'
            ]
        });
    </script>

    <!-- Materialize JS -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
    <script src="js/app.js" ></script>
</body>

</html>