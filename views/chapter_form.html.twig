{% extends "layout.html.twig" %}
{% set adminMenu = true %}

{% block title %}{{ title }}{% endblock title %}

{% block content %}
<div class="container">
    <h2 class="blue-grey-text text-darken-2"><i class="material-icons medium icon-bottom-medium">mode_edit</i> {{ block('title') }}</h2>
    <hr>
    {% for flashMessage in app.session.flashBag.get('success') %}
        <div class="card-panel green">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="container">
        {{ form_start(chapterForm) }}
        <div class="input-field">
            {{ form_label(chapterForm.number, null) }}
            {{ form_errors(chapterForm.number) }}
            {{ form_widget(chapterForm.number) }}
        </div>
        <div class="input-field">
            {{ form_label(chapterForm.title, null) }}
            {{ form_errors(chapterForm.title) }}
            {{ form_widget(chapterForm.title) }}
        </div>
        <div class="mt_btn right-align">
            <button class="btn-floating btn-large tooltipped green lighten-1" type="submit" data-position="left" data-delay="30" data-tooltip="Sauvegarder"><i class="material-icons">save</i></button>
        </div>

        {{ form_end(chapterForm) }}
    </div>
</div>
{% endblock content %}
